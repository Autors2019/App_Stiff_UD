<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:padding="15dp"
    tools:context=".estructuras.cercha.CerchaElementsActivity">
    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="casual"
            android:textColor="@color/Titulo"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Cercha"
            />
    </RelativeLayout>

    <!--subTitulo-->
    <TextView
        android:id="@+id/subTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5sp"
        android:layout_below="@+id/layoutHeader"
        android:fontFamily="casual"
        android:textColor="@color/Titulo"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="22sp"
        android:text="Indique la catidad de elementos que componen la cercha"
        />
    <!--RadioButton's-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botones"
        android:layout_below="@+id/subTitulo">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_above="@+id/botones"
            android:layout_below="@+id/subTitulo">

            <RadioButton
                android:id="@+id/radioBDos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Dos"
                android:checked="true"
                android:buttonTint="@color/Titulo"
                />
            <RadioButton
                android:id="@+id/radioBTres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Tres"
                android:buttonTint="@color/Titulo"
                />
            <RadioButton
                android:id="@+id/radioBCuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Cuatro"
                android:buttonTint="@color/Titulo"
                />
            <RadioButton
                android:id="@+id/radioBCinco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Cinco"
                android:buttonTint="@color/Titulo"
                />
            <RadioButton
                android:id="@+id/radioBSeis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Seis"
                android:buttonTint="@color/Titulo"
                />
            <RadioButton
                android:id="@+id/radioBSiete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15sp"
                android:fontFamily="casual"
                android:textSize="25sp"
                android:text="Siete"
                android:buttonTint="@color/Titulo"
                />
        </RadioGroup>


    </ScrollView>



    <!--Botones-->
    <RelativeLayout
        android:id="@+id/botones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/bAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:fontFamily="casual"
            android:textColor="@color/Titulo"
            android:textSize="22sp"
            android:text="Atras"
            android:onClick="onClick"
            />
        <Button
            android:id="@+id/bSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:fontFamily="casual"
            android:textColor="@color/Titulo"
            android:textSize="22sp"
            android:text="Siguiente"
            android:onClick="onClick"
            />
    </RelativeLayout>


</RelativeLayout>